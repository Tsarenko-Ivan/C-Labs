#include <iostream>
using namespace std;

int main() {
    int N;
    cout << "Введіть тризначне число N: ";
    cin >> N;

    int a = N / 100;
    int b = (N / 10) % 10;
    int c = N % 10;

    int sum = 0;

    if (a < 7) sum += a;
    if (b < 7) sum += b;
    if (c < 7) sum += c;

    cout << "Сума цифр, що менші 7: " << sum << endl;

    return 0;
}

#include <iostream>
using namespace std;

int main() {
    int N;
    cout << "Введіть тризначне число N: ";
    cin >> N;

    int a = N / 100;
    int b = (N / 10) % 10;
    int c = N % 10;

    int count = 0;

    if (a < 5) count++;
    if (b < 5) count++;
    if (c < 5) count++;

    cout << "Кількість цифр, що менші 5: " << count << endl;

    return 0;
}
