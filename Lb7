#include <iostream>
#include <string>
#include <iomanip>
using std::cout; using std::cin;
typedef std::string text;
int SkipTo=2;
// 1 = 2.6
// 2 = 2.7
// 3 = 2.10
int main() {
   
    //ЗАВДАННЯ 1 (2.6)
    if (SkipTo==1){
        int Steps=0; int ProvidedNumber;
        cout << "Provide a number for collats conjecture please! (absolute value will be applied incase number is negative) \n";
        cin >> ProvidedNumber; ProvidedNumber=abs(ProvidedNumber);
        while (ProvidedNumber!=1) {
            Steps++;
            if (ProvidedNumber%2==0) { ProvidedNumber/=2; }
            else { ProvidedNumber*=3; ProvidedNumber+=1; }
            cout << ProvidedNumber<<"\n";
        }
        cout << "Number of steps: " << Steps;
       
    }
   
    //ЗАВДАННЯ 2 (2.7)
    if (SkipTo==2){
    double pi4 = 0.; long n; text PositiveOrNegativeNext="Positive";
       
   cout << "Number of iterations? \n";
   cin >> n;

for(long i=0;i<n;i++) {
    double denominator = (1+i*2);
    double fraction = 1/denominator;
    if (PositiveOrNegativeNext=="Positive") { PositiveOrNegativeNext="Negative"; }
    else if (PositiveOrNegativeNext=="Negative") { fraction*=-1; PositiveOrNegativeNext="Positive"; }
    pi4+=fraction;
}

   cout << std::setprecision(20) << "Pi = " << (pi4 * 4.);
    }
   
    //ЗАВДАННЯ 3 (2.10)
    if (SkipTo==3){
        char Plus='+'; char HorizontalLine='-'; char VerticalLine='|'; char EmptySpace=' '; int Times;
        char SideSymbol; char InsideSymbol;
        cout << "Provide a number above 1, negatives will be changed with absolute value and >10 numbers will be reduced \n";
        cin >> Times; Times=abs(Times);
        if (Times>10) {Times=10; cout<<"You entered a value above 10 so it was changed to 10 \n";}
        else if (Times==1) { Times=3; cout<<"You entered 1 so it was changed to 3 \n"; }
       
        for (int i=0;i<Times;i++) {
           
            if (i==0 or i==(Times-1) )
            { SideSymbol=Plus; InsideSymbol=HorizontalLine;
            }
            else { SideSymbol=VerticalLine; InsideSymbol=EmptySpace;
            }
           
            for(int j=0;j<Times;j++) {
                if (j==0 || j==(Times-1) )
                { cout << SideSymbol; }
                else { cout << InsideSymbol; }
            } // right side iteration
            cout<<"\n";
           
        } // main/bottom iteration
       
    } //part 3
}
